extends ../layout 

block content 
    h1 New Book 

    include errors 
    
    form(method="POST" action="/books/new")
        if book
            p
                label(for="title") Title 
                input(id="title" name="title" type="text" value=`${book.title}`)
            p
                label(for="author") Author 
                input(id="author" name="author" type="text" value=`${book.author}`)

            p
                label(for="genre") Genre 
                input(id="genre" name="genre" type="text" value=`${book.genre}`)
            p
                label(for="year") Year 
                input(id="year" name="year" type="text" value=`${book.year}`)
        else if !book
            p
                label(for="title") Title 
                input(id="title" name="title" type="text")
            p
                label(for="author") Author 
                input(id="author" name="author" type="text")
            p
                label(for="genre") Genre 
                input(id="genre" name="genre" type="text")
            p
                label(for="year") Year 
                input(id="year" name="year" type="text")
        p
            input(type="submit" value="Create New Book")
        p 
            a.button(href="/books/page-1") Cancel