extends main-page-header


block primary


  div.table
    table
      thead
        tr
          th Title 
          th Author
          th Genre 
          th Year
      tbody
          each book in books
            tr
              td 
                a(href=`/books/${book.id}`) #{book.title}
              td #{book.author}
              td #{book.genre}
              td #{book.year}
  div.pagination 
    if endSearch === 'End Search'
      a.button(href='/') #{endSearch}
    if pages > 0
      a.button(href='view-all') View All
    if pages == 0
      a.button(href='page-1') View Pages
    - var i = 1;
    while i <= pages
      a.button(href=`page-${i}`) #{i} 
      - i++
